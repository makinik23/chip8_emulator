*.h        text eol=lf
*.hpp      text eol=lf
*.cc       text eol=lf
*.hh       text eol=lf
*.inl      text eol=lf
*.ixx      text eol=lf

# ========================
# Pliki CMake / Skrypty
# ========================
CMakeLists.txt text eol=lf
*.cmake         text eol=lf
*.sh            text eol=lf
*.ps1           text eol=lf
*.bat           text eol=crlf

# ========================
# Doxygen / Dokumentacja
# ========================
*.md        text eol=lf
